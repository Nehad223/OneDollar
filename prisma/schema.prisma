datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String
  products  Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  price       Float
  imageUrl    String
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

model Admin {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
}
